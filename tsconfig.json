{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es2015"
    ],
    "types": [
      "node"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "removeComments": true,
    "noImplicitAny": false,
    "noUnusedLocals": false
  },
  "include": [
    "./src/**/*.ts"
  ],
  "compileOnSave": false
}
